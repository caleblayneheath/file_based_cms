<ul>
  <% @files.each do |file| %>
    <li>
      <a href='/view/<%= file %>'><%= file %></a> - 
      <a href='/edit/<%= file %>'>(edit)</a>
      <a href='/duplicate/<%= file %>'>(duplicate)</a>
      <form class='inline' method='post' action='/delete/<%= file %>'>
        <input type='submit' value='delete'>
      </form>
    </li>
  <% end %>
</ul>

<p><a href='/new'>New Document</a></p>

<% if session[:username] %>
  <form action='/users/signout' method='post'>
    <p class='user-status'>Signed in as <%= session[:username] %>.</p>
    <input type='submit' value='Sign Out'>
  </form>
<% else %>
  <form action='/users/signin' method='get'>
    <input type='submit' value='Sign In'>
  </form>
  <br>
  <a href='/users/new'>
    <button>New User Signup</button>
  </a>
<% end %>